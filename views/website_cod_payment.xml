<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website_cod_payment_option" inherit_id="website_sale.payment">
        <xpath expr="//div[@id='payment_method']" position="inside">
            <t t-if="cod_available">
                <div class="payment-provider payment-provider-cod">
                    <label>
                        <input type="radio" name="provider_id" value="cod" required="required"/>
                        <span>
                            Cash on Delivery
                        </span>
                    </label>
                    <div class="cod-details">
                        <p>Amount must be paid in cash. Cannot cancel the delivery. One time delivery only.</p>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>