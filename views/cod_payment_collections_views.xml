<odoo>
    <record id="view_cod_payment_collection_list" model="ir.ui.view">
        <field name="name">cod.payment.collection.list</field>
        <field name="model">cod.payment.collection</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="order_amount"/>
                <field name="collection_amount"/>
                <field name="state"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <record id="view_cod_payment_collection_form" model="ir.ui.view">
        <field name="name">cod.payment.collection.form</field>
        <field name="model">cod.payment.collection</field>
        <field name="arch" type="xml">
            <form string="COD Payment Collections">
                <sheet>
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel"/>
                        <button name="action_done" type="object" string="Done"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done,cancel"/>
                    </header>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="name" string="Transaction"/>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="delivery_person_id"/>
                            <field name="order_amount"/>
                            <field name="collection_amount"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>